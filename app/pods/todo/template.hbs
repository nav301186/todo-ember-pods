<section id="todoapp">
  <header id="header">
    <h1>todos</h1>
    {{input
      type="text"
      id="new-todo"
      placeholder="What needs to be done?"
      value=newTitle
      action="createTodo"
    }}
  </header>

  <section id="main">
     {{edit-todo todos = todos}}
  <input type="checkbox" id="toggle-all"/>
  </section>

  <footer id="footer">
    <span id="todo-count">
      <strong>3</strong>
      {{inflection}} left
    </span>
    <ul id="filters">
      <li>
        <a href="all" class="selected">All</a>
      </li>
      <li>
        {{#link-to "todo.active" activeClass="selected" }}Active{{/link-to}}
      </li>ffg
      <li>
        <a href="completed">Completed</a>
      </li>
    </ul>

    <button id="clear-completed">
      Clear completed (1)
    </button>
  </footer>
</section>
